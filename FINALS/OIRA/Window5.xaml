<Window x:Class="OIRA.Window5"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OIRA"
        mc:Ignorable="d"
        Title="Window5" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="#FFBDFFEE" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Label Content="Amount" HorizontalAlignment="Left" VerticalAlignment="Top" Background="White" FontFamily="Perpetua Titling MT"/>
        <Label Content="Enter amount:" HorizontalAlignment="Left" VerticalAlignment="Top" Background="White" FontFamily="French Script MT" Margin="278,153,0,0"/>
        <Button x:Name="Confirm" Content="Confirm" HorizontalAlignment="Center" Margin="0,197,0,0" VerticalAlignment="Top" Click="Confirm_Click" FontFamily="French Script MT"/>
        <TextBox x:Name="Deposit_Amount" HorizontalAlignment="Center" Height="12" Margin="0,159,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="80"/>

    </Grid>
</Window>
